extends layout

append stylesheets
  link(rel='stylesheet', href='/font-awesome/css/all.min.css' type="text/css")
  link(rel='stylesheet', href='/stylesheets/index.css' type="text/css")


block content
  div(ng-controller="indexController")
    .ana
      .container-panel
        .wrap-panel
          form.panel-form(method='post')
            span.panel-form-title
              | Hoşgeldin!
            a.button(href='#')
              i.far.fa-facebook-square
              |Facebook
            a.button(href='/auth/google')
              i.fa.fa-google-plus
              |Google
            .label
              span
                | Kullanıcı Adı
            .wrap-input
              input.input(type='text', name='username')
              span.focus-input
            .label
              span
                | Şifre
              a.txt2.asd(href='#', style='margin-left: 5px;')
                | unuttun mu?
            .wrap-input
              input.input(type='password', name='pass')
              span.focus-input
            .container-panel-form-button(style='margin-top: 17px')
              button.panel-form-button
                | Giriş Yap
            .register
              span.txt2
                | üye değil misin?
              a.txt2.asd(href='#')
                | Hemen üye ol

