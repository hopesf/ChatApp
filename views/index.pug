extends layout

append stylesheets
  link(rel='stylesheet', href='/stylesheets/index.css' type="text/css")
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')


block content
  div(ng-controller="indexController")
    .ana
      .container-panel
        .wrap-panel
          .giris
            form.panel-form(method='post' action='/giris')
              span.panel-form-title
                | Hoşgeldin!
              a.button(href='/auth/github')
                i.fa.fa-github(style='font-size:20pt')
                |Github
              a.button(href='/auth/google')
                i.fa.fa-google-plus(style='font-size:18pt')
                |Google
              .label
                span
                  | Kullanıcı Adı
              .wrap-input
                input.input(type='text', name='kadi')
                span.focus-input
              .label
                span
                  | Şifre
                a.txt2.b-c-r(href='#', style='margin-left: 5px;')
                  | unuttun mu?
              .wrap-input
                input.input(type='password', name='sifre')
                span.focus-input
              .container-panel-form-button(style='margin-top: 17px')
                button.panel-form-button
                  | Giriş Yap
              .register
                span.txt2
                  | üye değil misin?
                a.txt2.b-c-r(href='#' id="uyelink")
                  | Hemen üye ol
          .kayit
            form.panel-form(method='post' action='/kayit')
              span.panel-form-title
                | Kayıt Ol!
              a.button(href='/auth/github')
                i.fa.fa-github(style='font-size:20pt')
                | Github
              a.button(href='/auth/google')
                i.fa.fa-google-plus(style='font-size:18pt')
                | Google
              .label
                span
                  | Kullanıcı Adın
              .wrap-input
                input.input(type='text', name='kayitk')
                span.focus-input
              .label
                span
                  | Şifren
              .wrap-input
                input.input(type='password', name='kayits')
              .label
                span
                  | Tekrar Şifre
              .wrap-input
                input.input(type='password', name='kayitscheck')
                span.focus-input
              .container-panel-form-button(style='margin-top: 17px')
                button.panel-form-button
                  | Kayıt Ol
              .register
                span.txt2
                  | zaten üye misin?
                a.txt2.b-c-r(href='#' id="girislink")
                  | Giriş Yap

